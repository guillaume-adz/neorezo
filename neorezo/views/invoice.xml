<?xml version="1.0"?>
<odoo>
    <data noupdate="0">

        <!-- form -->

        <record id="neorezo.invoice" model="ir.ui.view">
            <field name="name">NeoRezo Invoice form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="priority">100</field>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Tenant NeoRezo">
                        <group>
                            <group>
                                <field name="billing_first_name"/>
                                <field name="billing_last_name"/>
                            </group>
                            <group>
                                <field name="billing_address1"/>
                                <field name="billing_address2"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>